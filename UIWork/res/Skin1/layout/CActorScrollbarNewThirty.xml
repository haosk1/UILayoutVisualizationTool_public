        LayoutWidth="FillParent"
        LayoutHeight="FillParent"
        LayoutTopMargin="32"
        LayoutBottomMargin="32">
        <ScrollBarTrack
            Id="@Id/ScrollBarLayout/ScrollBarTrack"
            LayoutWidth="FillParent"
            LayoutHeight="FillParent"
            PaddingLeft="14"
            PaddingRight="4"
            HorizontalGravity="Center"
            VerticalGravity="Center"
            ThumbDrawable="@Drawable/RectCustom_scrollbar_bg"
            ThumbSizeFixup="false"
            IsThumbDrawableAnimator="true"
            Clickable="true"
            HotTrack="true" />
    </RelativeLayout>
</Resource>
