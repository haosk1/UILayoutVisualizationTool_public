<?xml version="1.0" encoding="UTF-8" ?>
<Resource>
    <HorizontalWipeLayout
        LayoutWidth="FillParent"
        LayoutHeight="136"
        Orientation="Horizontal"
        RightWipeEnabled="true"
        MaxWipeWidth="300"
        Clickable="true"
        Focusable="true">
        <!-- 信息按钮布局 -->
        <RelativeLayout
            Id="@+Id/BtnInfo"
            LayoutWidth="FillParent"
            LayoutHeight="FillParent"
            LayoutCenterVertical="true"
            Clickable="false"
            Background="@Drawable/mixin_bg">
            <RelativeLayout
                Id="@+Id/ListMain"
                LayoutWidth="902"
                LayoutHeight="116"
                LayoutTopMargin = "10"
                Clickable="true"
                Background="@Drawable/bg_prox_night_Suggest">
                <!-- 家或公司或收藏点的图标 -->
                <ImageActor
                    Id="@+Id/Icon_BG"
                    LayoutWidth="64"
                    LayoutHeight="64"
                    LayoutTopMargin="26"
                    LayoutLeftMargin="32"
                    DuplicateParentState="true" />
                <!--本地、手机、微信Icon-->
                <ImageActor
                    Id="@+Id/Icon_From"
                        LayoutWidth = "50"
                        LayoutHeight = "50"
                        LayoutTopMargin = "62"
                        LayoutLeftMargin = "63"
                        PaddingBottom = "9"
                        Background = "@Drawable/image_logo_s_bg"
                        DuplicateParentState = "true"/>
                <!-- 第一行家、公司、收藏点的名称 -->
                <RelativeLayout
                    LayoutWidth="726"
                    LayoutHeight="FillParent"
                    LayoutLeftMargin="128"
                    LayoutTopMargin = "5"
                    DuplicateParentState="true">
                    <TextActor
                        Id="@+Id/ListSrhAddrResult"
                        LayoutWidth="646"
                        LayoutHeight="52"
                        LayoutTopMargin="5"
                        LayoutAlignParentLeft="true"
                        HorizontalGravity="Left"
                        ShowEllipsis="true"
                        TextFont="@Font/UIFont40_Text_R"
                        TextColor="@Color/ListFavColor"
                        DuplicateParentState="true" />
                    <LinearLayout
                        Id="@+Id/LayoutRestInfo"
                        LayoutWidth="270"
                        LayoutHeight="40"
                        LayoutTopMargin="13"
                        LayoutRightMargin="1"
                        PaddingBottom = "4"
                        LayoutAlignParentRight="true"
                        HorizontalGravity="Right"
                        DuplicateParentState="true">
                        <TextActor
                            Id="@+Id/ListSrhTime"
                            LayoutWidth="WrapContent"
                            LayoutHeight="FillParent"
                            ShowEllipsis="true"
                            TextFont="@Font/UIFont34_Text_L"
                            TextColor="@Color/ListFavColor"
                            DuplicateParentState="true"
                            Text="--days --hrs" />
                    </LinearLayout>
                    <!-- 第二行地址名称 -->
                    <TextActor
                        Id="@+Id/ListSrhAddr"
                        LayoutWidth="644"
                        LayoutHeight="40"
                        LayoutTopMargin="59"
                        PaddingTop = "4"
                        HorizontalGravity="Left"
                        ShowEllipsis="true"
                        TextFont="@Font/UIFont34_Text_L"
                        TextColor="@Color/DayBlack_NightWhite_Grey_pressed"
                        DuplicateParentState="true" />
                </RelativeLayout>
            	<!-- 添加按钮 -->
				<ImageActor
					Id="@+Id/Add_Icon"
					LayoutWidth = "69"
					LayoutHeight = "69"
					LayoutAlignParentRight="true"
					LayoutRightMargin="17"
                    PaddingTop = "1"
					LayoutCenterInParent="true"
					DuplicateParentState = "true"/>
            </RelativeLayout>
            <!-- 分割线-->
            <ImageActor
                Id = "@+Id/BetweenLine"
                LayoutWidth="2"
                LayoutHeight="56"
                LayoutLeftMargin="902"
                LayoutCenterVertical="true"
                Drawable="@Drawable/citylist_line" />
            <!-- 算路按钮 -->
            <RelativeLayout
                Id="@+Id/SearchRoad_Icon"
                LayoutWidth="96"
                LayoutHeight="96"
                LayoutAlignParentRight="true"
                LayoutRightMargin="4"
                LayoutTopMargin="20"
                Clickable="true"
                Background="@Drawable/h84_background_normal"
                ClickDataCollection="BTN_Calculate">
                <ImageActor
                    LayoutWidth="69"
                    LayoutHeight="69"
                    LayoutCenterInParent="true"
                    Drawable="@Drawable/fav_navi_overall_view"
                    DuplicateParentState="true" />
            </RelativeLayout>
        </RelativeLayout>
        <!-- 左滑时显示布局-->
        <HorizontalWipeDecoration
            Id="@+Id/BtnInfofdsfa"
            LayoutWidth="300"
            LayoutHeight="136"
            DeleteRegionX="300"
            LayoutLeftMargin="1008">
            <LinearLayout
                Id="@+Id/LayoutLeftSwipe"
                LayoutHeight="136"
                LayoutVerticalGravity="Center">
                <ImageButton
                    Id="@+Id/LeftSwipeSetUp"
                    Background="@Drawable/h110_background_list_collection"
                    LayoutWidth="110"
                    LayoutHeight="116"
                    Clickable="true"
                    LayoutTopMargin="10"
                    LayoutLeftMargin="10"
                    ClickDataCollection="BTN_Set_Top" />
                <ImageButton
                    Id="@+Id/LeftSwipeDelete"
                    Background="@Drawable/h110_background_list_delete"
                    Drawable="@Drawable/fav_delete"
                    LayoutWidth="110"
                    LayoutHeight="116"
                    LayoutTopMargin="10"
                    LayoutLeftMargin="10"
                    LayoutAlignParentRight="true"
                    Clickable="true"
                    ClickDataCollection="BTN_Favorite_Delete" />
                <ImageButton
                    Id="@+Id/LeftSwipeBigDelete"
                    Background="@Drawable/button_delete_big_bg"
                    Drawable="@Drawable/navi_delete_l"
                    LayoutWidth="280"
                    LayoutHeight="124"
                    LayoutTopMargin="6"
                    LayoutLeftMargin="20"
                    LayoutAlignParentRight="true"
                    Clickable="true"
                    Visible="Gone"
                    ClickDataCollection="BTN_Favorite_Delete_Big" />
            </LinearLayout>
        </HorizontalWipeDecoration>
    </HorizontalWipeLayout>
</Resource>
