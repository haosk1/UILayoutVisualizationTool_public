<?xml version="1.0" encoding="UTF-8" ?>
<Resource>
    <RelativeLayout
        LayoutWidth="FillParent"
        LayoutHeight="FillParent"
        Background="@Drawable/map_place_night_and_day"
        Clickable="true">
        <RelativeLayout
            LayoutWidth="FillParent"
            LayoutHeight="FillParent"
            LayoutLeftMargin="492">
            <RelativeLayout
                Id="@+Id/NaviActivationBG"
                LayoutWidth="WrapContent"
                LayoutHeight="WrapContent"
                LayoutCenterInParent="true"
                Background="@Drawable/popup_toast_bg">
                <RelativeLayout
                    LayoutWidth="WrapContent"
                    LayoutHeight="WrapContent"
                    LayoutCenterInParent="true"
                    LayoutLeftMargin="34"
                    LayoutRightMargin="34"
                    LayoutTopMargin="34"
                    LayoutBottomMargin="34">
                    <TextActor
                        Id="@+Id/NaviActivationInfo"
                        LayoutWidth="WrapContent"
                        LayoutHeight="WrapContent"
                        LayoutLeftMargin="100"
                        LayoutRightMargin="100"
                        LayoutTopMargin="30"
                        LayoutBottomMargin="30"
                        PaddingTop="6"
                        LineIntervalAddFactor="-14"
                        TextColor="@Color/NormalBtn_RGB"
                        TextFont="@Font/UIFont34_Text_L"
                        WordWrapped="true"
                        SingleLine="false"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <Button
            Id="@+Id/BtnFactoryMode"
            LayoutWidth="200"
            LayoutHeight="200"
            HorizontalGravity="Center"
            VerticalGravity="Center"
            LayoutAlignParentRight="true"
            LayoutAlignParentBottom="true"
            LayoutBottomMargin="165"
            TextColor="@Color/NormalBtn_RGB"
            TextFont="@Font/UIFont24"
            ShowEllipsis="false"
            TextShadowColor="@Color/BtnBlackTextColor"
            Visible="Gone" />
    </RelativeLayout>
</Resource>
